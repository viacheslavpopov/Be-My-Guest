@{
    Layout = "_Layout";
}

@using BeMyGuest.Models

<h1><span id="beMyGuest">Be My Guest!</span></h1>
<h3 id="bylineHighlight">Make socially awkward socially <span id="byline">awesome.</span></h3>
@* <img id="logo" src="~/img/BeMyGuest_Logo.png" alt="Be My Guest logo & byline"> *@

@if (!User.Identity.IsAuthenticated)
{
    <div class="card mx-auto" style="width: 36rem;">
    <div class="card-body">
        <h5 class="card-title text-center">Join us!</h5>
        <p class="card-text text-center text-muted">Create your first event by registering your new account today, or
            log in if you already have an account.</p>
        <a href="/account/register" class="card-link">Register</a>
        <a href="/account/login" class="text-left card-link">Login</a>
    </div>
</div>
}
else
{
    <div class="card mx-auto" style="width: 48rem;">
    <div class="card-body">
        <h5 class="card-title text-center">What would you like to do today?</h5>
        <p class="card-text text-center text-muted">Create an event, see an events guest list, view your details ...</p>
        <div class="row">
            <div class="col-sm-6">
                <div class="card-body">
                    <a href="/hosts" class="card-link">Hosts Home</a>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card-body">
                    <a href="/guests" class="card-link">Guests Home</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="card-body">
                    <a href="/events" class="card-link">Your Events</a>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card-body">
                    <a href="/evidences" class="card-link">Covid Data Home</a>
                </div>
            </div>
        </div>
        @* <div class="row">
            <div class="col-sm-6">
                <div class="card-body">
                    <a href="#" class="card-link">Update Account Info</a>
                </div>
            </div>
        </div> *@
    </div>
</div>
}