@{
    Layout = "_Layout";
}

@model BeMyGuest.Models.Guest

<h2 style="text-align:center">Guest Details</h2>
<hr />

<div class="card" style="width: 48rem;">
    <div class="card-body">
        <h3 class="card-title">@Html.DisplayNameFor(model => model.Name):</h3>
        <h4>@Html.DisplayFor(model => model.Name)</h4>

        <ul class="card-text" style="list-style: none;">
            <li class="form-group row">@Html.DisplayNameFor(model => model.Pronouns): @Html.DisplayFor(model => model.Pronouns)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.Vaccinated): @Html.DisplayFor(model => model.Vaccinated)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.HighRisk): @Html.DisplayFor(model => model.HighRisk)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.RecentTravel): @Html.DisplayFor(model => model.RecentTravel)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.CompletedQuestionnaire): @Html.DisplayFor(model => model.CompletedQuestionnaire)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.MedicalMobilityNeeds): @Html.DisplayFor(model => model.MedicalMobilityNeeds)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.MedicalConditions): @Html.DisplayFor(model => model.MedicalConditions)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.ServiceAnimal): @Html.DisplayFor(model => model.ServiceAnimal)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.DietaryRestrictions): @Html.DisplayFor(model => model.DietaryRestrictions)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.Allergies): @Html.DisplayFor(model => model.Allergies)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.PreferredLanguage): @Html.DisplayFor(model => model.PreferredLanguage)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.AlcoholFree): @Html.DisplayFor(model => model.AlcoholFree)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.NotAHugger): @Html.DisplayFor(model => model.NotAHugger)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.PlusOne): @Html.DisplayFor(model => model.PlusOne)</li>
            <li class="form-group row">@Html.DisplayNameFor(model => model.SmallChildren): @Html.DisplayFor(model => model.SmallChildren)</li>
        </ul>
            <h3>Send Invite</h3>
            <h3><a href="mailto:@Model.Email?subject=You're Invited!&body=You have been invited to a gathering by (name here)! Here are the event details: (event details such as date, time, place, etc.). Please click the link below and use this code 'RFDJ123' to RSVP and answer the 'social cues' needed to make this gathering awesome. If you haven't created an account with BeMyGuest, you will need to create one and register as a guest." class="btn btn-outline-info">Send Invite</a></h3>
    </div>
</div>
